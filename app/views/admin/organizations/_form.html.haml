=form_for([:admin, @organization]) do |f|
  -if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:

      %ul
        - @organization.errors.full_messages.each do |msg|
          %li
            = msg

  .field
    = f.label :name
    .input
      = f.text_field :name
    %br

  .field
    = f.label :mission
    .input
      = f.text_field :mission
    %br

  .field
    = f.label :email
    .input
      = f.text_field :email
    %br

  .field
    = f.label :address1
    .input
      = f.text_field :address1
    %br

  .field
    = f.label :address2
    .input
      = f.text_field :address2
    %br

  .field
    = f.label :type
    .input
      = f.text_field :type
    %br

  .actions
    = f.submit :class => 'btn primary'
