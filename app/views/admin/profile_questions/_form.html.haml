= form_for([:admin, @profile_question]) do |f|
  - if @profile_question.errors.any?
    #error_explanation
      %h2
        = pluralize(@profile_question.errors.count, "error")
        prohibited this admin_profile_question from being saved:

      %ul
      - @profile_question.errors.full_messages.each do |msg|
        %li
          = msg

  .field
    = f.label :short_display
    .input
      = f.text_field :short_display
  %br

  .field
    = f.label :long_display
    .input
      = f.text_field :long_display
  %br

  .actions
    = f.submit :class => 'primary btn'
